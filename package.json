    "start": "lerna run start --stream"
  },
  "dependencies": {
    "writy": "file:packages/core"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "release-it": "^14.2.2",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,tsx,ts}": [
      "prettier --write"
    ]
